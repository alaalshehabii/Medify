<div class="card">
  <h2>Prescription</h2>
  <p><strong>Patient:</strong> <%= prescription.patient_id?.full_name || '-' %></p>
  <p><strong>Medication:</strong> <%= prescription.medication_id?.name || '-' %></p>
  <p><strong>Dosage:</strong> <%= prescription.dosage||'-' %></p>
  <p><strong>Frequency:</strong> <%= prescription.frequency||'-' %></p>
  <p><strong>Dates:</strong> <%= prescription.start_date ? prescription.start_date.toISOString().slice(0,10) : '-' %> â†’ <%= prescription.end_date ? prescription.end_date.toISOString().slice(0,10) : '-' %></p>
  <p><strong>Refills:</strong> <%= prescription.refills ?? 0 %></p>
  <p><a class="btn" href="/prescriptions/<%= prescription._id %>/edit">Edit</a></p>
</div>
