<div class="card">
  <h2>New Prescription</h2>
  <form method="POST" action="/prescriptions">
    <div class="field">
      <label>Patient</label>
      <select name="patient_id" required>
        <% (patients||[]).forEach(p => { %>
          <option value="<%= p._id %>"><%= p.full_name %></option>
        <% }) %>
      </select>
    </div>
    <div class="field">
      <label>Medication</label>
      <select name="medication_id" required>
        <% (medications||[]).forEach(m => { %>
          <option value="<%= m._id %>"><%= m.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="field"><label>Dosage</label><input name="dosage" placeholder="1 tablet"></div>
    <div class="field"><label>Frequency</label><input name="frequency" placeholder="twice daily"></div>
    <div class="field"><label>Start date</label><input type="date" name="start_date"></div>
    <div class="field"><label>End date</label><input type="date" name="end_date"></div>
    <div class="field"><label>Refills</label><input type="number" name="refills" value="0" min="0"></div>
    <button class="btn">Create</button>
  </form>
</div>
