<div class="card">
  <h2>Prescriptions</h2>
  <p><a class="btn" href="/prescriptions/new">+ New Prescription</a></p>
  <table>
    <thead><tr><th>Patient</th><th>Medication</th><th>Dosage</th><th>Frequency</th><th></th></tr></thead>
    <tbody>
      <% (prescriptions||[]).forEach(p => { %>
        <tr>
          <td><%= p.patient_id?.full_name || '-' %></td>
          <td><%= p.medication_id?.name || '-' %></td>
          <td><%= p.dosage||'-' %></td>
          <td><%= p.frequency||'-' %></td>
          <td><a href="/prescriptions/<%= p._id %>">View</a> Â· <a href="/prescriptions/<%= p._id %>/edit">Edit</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
