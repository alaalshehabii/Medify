<!-- Hero -->
<section class="hero">
  <div class="wrap">
    <div class="hero-grid">

      <!-- LEFT TEXT -->
      <div class="hero-copy">
        <h1>Your health is our top priority.</h1>
        <p class="lead">
          Book in-clinic appointments, track your medications, and manage prescriptions in one place.
          A simple, patient-first experience from scheduling to follow up.
        </p>

        <div class="cta-row">
          <a href="/auth/signup" class="btn">Create patient account</a>
          <a href="/auth/login" class="btn ghost">I already have an account</a>
        </div>

        <!-- Feature tiles (blue gradients) -->
        <div class="stats mt-24">
          <div class="stat" style="background: linear-gradient(135deg, #ecf2f8 0%, #dbecfd 100%);">
            <span class="label">Appointments</span>
            <span class="num">Book In-Clinic</span>
            <span class="hint">Choose a time that works for you</span>
          </div>

          <div class="stat" style="background: linear-gradient(135deg, #e0eefd 0%, #c5e2fd 100%);">
            <span class="label">Doctors</span>
            <span class="num">Find the Right Specialist</span>
            <span class="hint">Search by name or specialty</span>
          </div>

          <div class="stat" style="background: linear-gradient(135deg, #cfe8fd 0%, #bedfff 100%);">
            <span class="label">Medications</span>
            <span class="num">Track Doses &amp; Reminders</span>
            <span class="hint">Stay on schedule with alerts</span>
          </div>

          <div class="stat" style="background: linear-gradient(135deg, #c4ddff 0%, #a2d0fe 100%);">
            <span class="label">Prescriptions</span>
            <span class="num">Easy Refills</span>
            <span class="hint">Request renewals in seconds</span>
          </div>
        </div>
      </div>

      <!-- RIGHT IMAGE -->
      <div class="hero-media">
        <div class="media-frame">
          <img
            src="https://cdn.prod.website-files.com/66bd394eedeb9d6ee29898c6/682f5450a046c241920c1e6f_Three%20doctors%20standing%20side%20by%20side%2C%20crossing%20their%20arms.jpg"
            alt="Medical team"
            referrerpolicy="no-referrer"
            loading="lazy">
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Inside Medify -->
<section class="section soft">
  <div class="wrap">
    <h2 class="section-title">Inside Medify</h2>
    <p class="lead">A simple, patient-first experience from scheduling to follow up.</p>

    <div class="grid grid-3 mt-24">
      <!-- Doctors -->
      <div class="card hover-lift">
        <img
          src="https://media.istockphoto.com/id/512278456/photo/group-of-doctors-at-the-hospital.jpg?s=612x612&w=0&k=20&c=EPPHeKuq0YabUC-QCWlAOhTfIZAAPtrwQ96V_Wp0oKY="
          alt="Doctors team"
          style="width:100%;height:200px;object-fit:cover;border-radius:14px;display:block"
          referrerpolicy="no-referrer"
          onerror="this.style.display='none';">
        <h3>Doctors</h3>
        <p>Browse specialists and view clinic details.</p>
      </div>

      <!-- Appointments -->
      <div class="card hover-lift">
        <img
          src="https://www.shutterstock.com/image-photo/stethoscope-on-white-blank-calendar-600nw-2501558353.jpg"
          alt="Appointments calendar"
          style="width:100%;height:200px;object-fit:cover;border-radius:14px;display:block"
          referrerpolicy="no-referrer"
          onerror="this.style.display='none';">
        <h3>Appointments</h3>
        <p>Book or manage your visits with a few taps.</p>
      </div>

      <!-- Medications -->
      <div class="card hover-lift">
        <img
          src="https://www.lacare.org/sites/default/files/2025-04/pharmacy-services-hero-040925.png"
          alt="Medications and pharmacy services"
          style="width:100%;height:200px;object-fit:cover;border-radius:14px;display:block"
          referrerpolicy="no-referrer"
          onerror="this.style.display='none';">
        <h3>Medications</h3>
        <p>Track doses, set reminders, and avoid missed refills.</p>
      </div>
    </div>
  </div>
</section>
