<!-- Hero -->
<section class="hero">
  <div class="wrap">
    <div class="hero-grid">

      <!-- LEFT TEXT -->
      <div class="hero-copy">
        <h1>Care that feels <span class="brand-accent">calm and modern.</span></h1>
        <p class="lead">
          Book in-clinic or online appointments, track your medications, and manage prescriptions — all in one place.
        </p>
        <div class="cta-row">
          <a href="/patients/new" class="btn">Create patient account</a>
          <a href="/auth/login" class="btn ghost">I already have an account</a>
        </div>

        <!-- Hospital-focused feature tiles (with your colors) -->
        <div class="stats mt-24">
          <div class="stat" style="background:#f9e7f0;">  <!-- light pink -->
            <span class="label">Appointments</span>
            <span class="num">Book Online / In-Clinic</span>
            <span class="hint">Choose a time that works for you</span>
          </div>

          <div class="stat" style="background:#ffffe0;">  <!-- light yellow -->
            <span class="label">Doctors</span>
            <span class="num">Find the Right Specialist</span>
            <span class="hint">Search by name or specialty</span>
          </div>

          <div class="stat" style="background:#e6f4ff;">  <!-- light blue -->
            <span class="label">Medications</span>
            <span class="num">Track Doses & Reminders</span>
            <span class="hint">Stay on schedule with alerts</span>
          </div>

          <div class="stat" style="background:#e9fae9;">  <!-- light orange -->
            <span class="label">Prescriptions</span>
            <span class="num">Easy Refills</span>
            <span class="hint">Request renewals in seconds</span>
          </div>
        </div>
      </div>

      <!-- RIGHT IMAGE -->
      <div class="hero-media">
        <div class="media-frame">
          <img
            src="https://t4.ftcdn.net/jpg/03/88/00/37/360_F_388003741_3pDGioOwlLIEr0Af2DaepDlLxc3tgqUZ.jpg"
            alt="Hospital building">
        </div>
      </div>
    </div>
  </div>
</section>

