<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'Medify' %></title>
  <!-- served from /public/styles.css via express.static -->
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <nav class="nav">
    <div class="nav-left">
      <a class="brand" href="/">Medify</a>
      <% if (typeof currentUser !== 'undefined' && currentUser) { %>
        <a href="/doctors">Doctors</a>
        <a href="/medications">Medications</a>
        <a href="/appointments">Appointments</a>
      <% } %>
    </div>
    <div class="nav-right">
      <% if (typeof currentUser !== 'undefined' && currentUser) { %>
        <span class="hello">Hi, <%= currentUser.fullName %></span>
        <form action="/auth/logout" method="post" style="display:inline;">
          <button class="btn-out">Logout</button>
        </form>
      <% } else { %>
        <a href="/auth/login">Login</a>
        <a class="btn" href="/auth/signup">Sign up</a>
      <% } %>
    </div>
  </nav>

  <% if (typeof flash !== 'undefined' && flash) { %>
    <div class="flash <%= flash.type %>"><%= flash.message %></div>
  <% } %>

  <main class="container">