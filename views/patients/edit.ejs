<% layout('layout') -%>
<div class="card">
  <h2>Edit Patient</h2>
  <form method="POST" action="/patients/<%= patient._id %>?_method=PUT">
    <div class="field"><label>Name</label><input name="full_name" value="<%= patient.full_name %>" required></div>
    <div class="field"><label>DOB</label><input type="date" name="dob" value="<%= patient.dob ? patient.dob.toISOString().slice(0,10) : '' %>"></div>
    <div class="field"><label>Allergies</label><input name="allergies" value="<%= (patient.allergies||[]).join(', ') %>"></div>
    <div class="field"><label>Phone</label><input name="phone" value="<%= patient.phone||'' %>"></div>
    <div class="field"><label>Email</label><input name="email" value="<%= patient.email||'' %>"></div>
    <button class="btn">Save</button>
  </form>
  <form method="POST" action="/patients/<%= patient._id %>?_method=DELETE" style="margin-top:10px">
    <button class="btn" style="background:#e05b5b">Delete</button>
  </form>
</div>
