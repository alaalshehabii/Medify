<div class="card">
  <h2>Edit Medication</h2>
  <form method="POST" action="/medications/<%= medication._id %>?_method=PUT">
    <div class="field"><label>Name</label><input name="name" value="<%= medication.name %>" required></div>
    <div class="field"><label>Form</label><input name="form" value="<%= medication.form||'' %>"></div>
    <div class="field"><label>Strength</label><input name="strength" value="<%= medication.strength||'' %>"></div>
    <button class="btn">Save</button>
  </form>
  <form method="POST" action="/medications/<%= medication._id %>?_method=DELETE" style="margin-top:10px">
    <button class="btn" style="background:#e05b5b">Delete</button>
  </form>
</div>
