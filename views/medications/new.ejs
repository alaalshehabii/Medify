<div class="card">
  <h2>New Medication</h2>
  <form method="POST" action="/medications">
    <div class="field"><label>Name</label><input name="name" required></div>
    <div class="field"><label>Form</label><input name="form" placeholder="tablet, capsule, syrup"></div>
    <div class="field"><label>Strength</label><input name="strength" placeholder="500 mg"></div>
    <button class="btn">Create</button>
  </form>
</div>
