
<div class="grid grid-2">
  <div class="card">
    <h2>Welcome, Doctor</h2>
    <p><a class="btn" href="/appointments">View all appointments</a></p>
  </div>
  <div class="card">
    <h3>Today / Upcoming</h3>
    <ul>
      <% (appts||[]).forEach(a => { %>
        <li>
          <strong><%= new Date(a.datetime).toLocaleString() %></strong>
          — <%= a.patient_id?.full_name || '-' %> — <%= a.mode %> / <%= a.status %>
        </li>
      <% }) %>
      <% if (!appts?.length) { %><li>No appointments found.</li><% } %>
    </ul>
  </div>
</div>
