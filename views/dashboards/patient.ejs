
<div class="grid grid-2">
  <div class="card">
    <h2>Welcome, Patient</h2>
    <p><a class="btn" href="/appointments/new">+ Book appointment</a></p>
  </div>
  <div class="card">
    <h3>Upcoming Appointments</h3>
    <ul>
      <% (appts||[]).forEach(a => { %>
        <li>
          <strong><%= new Date(a.datetime).toLocaleString() %></strong>
          with Dr. <%= a.doctor_id?.full_name || '-' %> â€” <%= a.mode %> / <%= a.status %>
        </li>
      <% }) %>
      <% if (!appts?.length) { %><li>No upcoming appointments.</li><% } %>
    </ul>
  </div>
</div>
