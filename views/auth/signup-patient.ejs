<div class="card" style="max-width:560px;margin:24px auto">
  <h2>Sign up â€” Patient</h2>
  <% if (error) { %><p style="color:#c0392b"><%= error %></p><% } %>

  <form method="POST" action="/auth/signup/patient">
    <div class="field">
      <label>Full name</label>
      <input name="fullName" value="<%= form.fullName||'' %>" required>
    </div>

    <div class="field">
      <label>Date of birth</label>
      <input type="date" name="dob" value="<%= form.dob||'' %>">
    </div>

    <div class="field">
      <label>Email</label>
      <input type="email" name="email" value="<%= form.email||'' %>" required>
    </div>

    <div class="field">
      <label>Password</label>
      <div style="display:flex;gap:8px;align-items:center">
        <input type="password" name="password" required style="flex:1">
        <button class="btn ghost js-toggle-pass" type="button">Show</button>
      </div>
    </div>

    <div class="field">
      <label>Confirm password</label>
      <div style="display:flex;gap:8px;align-items:center">
        <input type="password" name="confirmPassword" required style="flex:1">
        <button class="btn ghost js-toggle-pass" type="button">Show</button>
      </div>
    </div>

    <button class="btn">Create account</button>
  </form>
</div>
