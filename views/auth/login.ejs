<div class="card" style="max-width:520px;margin:24px auto">
  <h2>Log in</h2>
  <% if (error) { %><p style="color:#c0392b"><%= error %></p><% } %>

  <form method="POST" action="/auth/login">
    <div class="field">
      <label>Email</label>
      <input name="email" type="email" required>
    </div>

    <div class="field">
      <label>Password</label>
      <div style="display:flex;gap:8px;align-items:center">
        <input name="password" type="password" required style="flex:1">
        <button class="btn ghost js-toggle-pass" type="button">Show</button>
      </div>
    </div>

    <button class="btn" type="submit">Log in</button>
  </form>

  <p style="margin-top:12px">
    New here?
    <a href="/auth/signup/patient">Sign up as Patient</a> Â·
    <a href="/auth/signup/doctor">Sign up as Doctor</a>
  </p>
</div>
