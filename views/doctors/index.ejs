<%- include('../partials/header') %>

<section class="section">
  <h1 class="page-title">Meet our expert specialists</h1>
  <p class="muted center">Experienced physicians across our key departments.</p>

  <div class="doctors-grid">
    <% doctors.forEach(d => { %>
      <article class="doctor-card">
        <div class="doctor-photo">
          <img src="<%= d.photoUrl %>" alt="<%= d.fullName %>"
               onerror="this.src='/img/doctor-placeholder.jpg'">
        </div>
        <div class="doctor-info">
          <h3><%= d.fullName %></h3>
          <p class="muted"><%= d.specialty %></p>
        </div>
      </article>
    <% }) %>
  </div>
</section>

<%- include('../partials/footer') %>